    <!--Added the entity salary_earning_t-->
    <changeSet id="20230301-1" author="dwivna">
        <createTable tableName="salary_earning_t">
            <column name="id" type="varchar(255)">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="person_id" type="varchar(255)">
                <constraints nullable="false" referencedTableName="person_t" foreignKeyName="id"/>
            </column>
            <column name="fy_id" type="varchar(255)">
                <constraints nullable="true" referencedTableName="financial_year_t" foreignKeyName="id"/>
            </column>
            <column name="month_id" type="varchar(255)">
                <constraints nullable="false" referencedTableName="en_month_t" foreignKeyName="id"/>
            </column>
            <column name="basic_pay" type="double">
                <constraints nullable="false"/>
            </column>
            <column name="special_allowance" type="double">
                <constraints nullable="false"/>
            </column>
            <column name="house_rent_allowance" type="double">
                <constraints nullable="false"/>
            </column>
            <column name="other_allowance" type="double">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
